{
  "manifest_version": 3,
  "name": "AI Active Recall Helper",
  "version": "1.0.1",
  "description": "Generates comprehension questions for AI outputs on ChatGPT.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*", 
    "https://api.openai.com/*"
  ],
  "action": {"default_popup": "popup.html"},
  "content_scripts": [{
    "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
    "js": ["contentScript.js"],
    "run_at": "document_idle"
  }]
}